# Frontend environment variables
# Copy this file to ".env.local" or ".env" in the frontend folder and fill values before use.
# Do NOT commit real secrets; NEXT_PUBLIC_* variables are exposed to the browser.

# Public API base URL used client-side (example: http://localhost:3010)
NEXT_PUBLIC_API_BASE_URL=

# Public site URL used for absolute links (example: http://localhost:3000)
NEXT_PUBLIC_SITE_URL=

# Public/internal key used by client to access protected endpoints (optional)
NEXT_PUBLIC_INTERNAL_API_KEY=

# Server-only API base URL used by server-side code (optional)
API_BASE_URL=

# Server-only internal API key used by server-side requests (optional, keep secret)
INTERNAL_API_KEY=
